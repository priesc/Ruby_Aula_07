<h1>Listing fornecedores</h1>

<table style="text-align:center">
  <tr>
    <th style="width:100px">NOME</th>
    <th style="width:100px">CNPJ/CPF</th>
    <th style="width:150px">PESSOA JURÍDICA</th>
    <th></th>
    <th></th>
  </tr>

<% @fornecedores.each do |fornecedor| %>
  <tr>
    <td style="width:100px"><%= fornecedor.nome %></td>
    <% if fornecedor.pj?  %>
    <td style="width:100px"><%= fornecedor.cnpj %></td>
    <% else %>
    <td style="width:100px"><%= fornecedor.cpf %></td>
    <% end %>

    <td style="width:150px"><%= fornecedor.pj? ? 'Sim' : 'Não' %></td>

    <% if usuario_signed_in? %>
      <td><%= link_to 'Show', fornecedor %></td>
      <td><%= link_to 'Edit', edit_fornecedor_path(fornecedor) %></td>
      <td><%= link_to 'Destroy', fornecedor, confirm: 'Are you sure?', method: :delete %></td>
    <% else %>
      <td></td>
      <td></td>
      <td></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if usuario_signed_in? %>
  <%= link_to 'New Fornecedor', new_fornecedor_path %>
<% end %>
